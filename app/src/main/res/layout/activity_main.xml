<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1"
              tools:context=".MainActivity">



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Movie_Name"/>
    <EditText

            android:hint="@string/Name_Hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
            <!--android:id="@+id/"-->
                                        />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Desc"/>
    <EditText

            android:hint="@string/Desc_Hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
            <!--android:id="@+id/etNumBiggerThan25"-->

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Language"/>

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbtnButton1"
                android:text="@string/Language_English"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbtnButton2"
                android:text="@string/Language_Chinese"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbtnButton3"
                android:text="@string/Language_Malay"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbtnButton4"
                android:text="@string/Language_Tamil"/>

    </RadioGroup>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Release_Date"
            android:hint="@string/Release_Hint"/>

    <EditText

            android:hint="@string/Release_Hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"/>


    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/Suitable_Nonsuitable"/>



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:text="@string/Hidden_Checkbox"
                  android:weightSum="1">

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/Hidden_1"
                android:text="@string/Violence"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/Hidden_2"
                android:text="@string/Strong_Language"/>



    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="100dp">
    </LinearLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnMyButton"
                android:text="@string/Add_Movie"
                />



</LinearLayout>